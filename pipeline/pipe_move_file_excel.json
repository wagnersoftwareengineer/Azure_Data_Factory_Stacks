{
	"name": "pipe_move_file_excel",
	"properties": {
		"activities": [
			{
				"name": "Copiar XLSX to CSV",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "ExcelSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"parallelCopies": 1,
					"dataIntegrationUnits": 4,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ds_generico_excel",
						"type": "DatasetReference",
						"parameters": {
							"fileName": "ProdutosGeral.xlsx",
							"fileSeparator": ";"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_generico_CSV",
						"type": "DatasetReference",
						"parameters": {
							"containerName": "csvfiles/Copiados",
							"fileName": "ProdutosGeral_Transformado.csv",
							"separatorName": ";"
						}
					}
				]
			},
			{
				"name": "Deletar Arquivo Copiado",
				"type": "Delete",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "ds_generico_CSV",
						"type": "DatasetReference",
						"parameters": {
							"containerName": "csvfiles/Copiados/",
							"fileName": "ProdutosGeral_Transformado.CSV",
							"separatorName": ";"
						}
					},
					"enableLogging": false,
					"storeSettings": {
						"type": "AzureBlobFSReadSettings",
						"recursive": true,
						"enablePartitionDiscovery": false
					}
				}
			}
		],
		"folder": {
			"name": "adf_03_handson01"
		},
		"annotations": []
	}
}